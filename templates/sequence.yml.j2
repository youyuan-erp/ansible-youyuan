---
apiVersion: v1
kind: Service
metadata:
  name: sequence
  labels:
    app: sequence
spec:
  type: ClusterIP
  ports:
    - name: http
      port: 80
      targetPort: 80
  selector:
    app: sequence
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: sequence
  labels:
    app: sequence
spec:
  replicas: 1
  selector:
    matchLabels:
      app: sequence
  minReadySeconds: 10
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
  template:
    metadata:
      labels:
        app: sequence
    spec:
      restartPolicy: Always
      containers:
        - name: sequence
          image: "{{ sequence_image }}"
          env:
            - name: DEPLOY_TIME
              value: "{{ sequence_time }}"
            - name: PORT
              value: "{{ sequence_port }}"
            - name: BASE
              value: "{{ sequence_path }}"
            - name: MONGODB_CONNECTION
              value: "{{ sequence_mongodb_connection }}"
          ports:
            - name: http
              containerPort: 80
          resources:
            limits:
              cpu: "1000m"
              memory: "1Gi"
            requests:
              cpu: "10m"
              memory: "32Mi"
