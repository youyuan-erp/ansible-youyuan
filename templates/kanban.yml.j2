#jinja2: lstrip_blocks: "True", trim_blocks: "True"
---
apiVersion: v1
kind: Service
metadata:
  name: kanban
  labels:
    app: kanban
spec:
  type: ClusterIP
  ports:
    - name: http
      port: 80
      targetPort: 80
  selector:
    app: kanban
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: kanban
  labels:
    app: kanban
spec:
  replicas: {{ kanban_replicas }}
  selector:
    matchLabels:
      app: kanban
  minReadySeconds: 10
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
  template:
    metadata:
      labels:
        app: kanban
        name: kanban
        vector.dev/enable: "{{ kanban_vector_enabled }}"
        {% if kanban_vector_topic %}
        vector.dev/topic: "{{ kanban_vector_topic }}"
        {% endif %}
    spec:
      restartPolicy: Always
      containers:
        - name: kanban
          image: "{{ kanban_image }}"
          imagePullPolicy: "{{ image_pull_policy }}"
          env:
            - name: DEPLOY_TIME
              value: "{{ kanban_time }}"
            - name: PORT
              value: "{{ kanban_port }}"
            - name: BASE
              value: "{{ kanban_path }}"
            - name: MONGODB_CONNECTION
              value: "{{ kanban_mongodb_connection }}"
          ports:
            - name: http
              containerPort: 80
          resources:
            limits:
              cpu: "500m"
              memory: "1Gi"
            requests:
              cpu: "10m"
              memory: "32Mi"
